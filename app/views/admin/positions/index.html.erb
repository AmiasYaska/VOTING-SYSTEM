<h2 class="text-2xl font-semibold text-green-700 mb-6">Manage Positions</h2>

<div class="mb-6">
  <%= link_to "Add New Position", new_admin_position_path, class: "px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600" %>
</div>

<table class="w-full table-auto bg-white rounded-lg shadow-md">
  <thead>
    <tr class="bg-gray-100">
      <th class="p-4 text-left">Name</th>
      <th class="p-4 text-left">Max Winners</th>
      <th class="p-4 text-left">Priority</th>
      <th class="p-4 text-left">Voting Open</th>
      <th class="p-4 text-left">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @positions.each do |position| %>
      <tr class="border-t">
        <td class="p-4"><%= position.name %></td>
        <td class="p-4"><%= position.max_winners %></td>
        <td class="p-4"><%= position.priority %></td>
        <td class="p-4"><%= position.voting_open ? "Yes" : "No" %></td>
        <td class="p-4">
          <%= link_to "Edit", edit_admin_position_path(position), class: "text-blue-500 hover:underline mr-2" %>
          <%= link_to "Delete", admin_position_path(position), method: :delete, data: { confirm: "Are you sure you want to delete this position?" }, class: "text-red-500 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>