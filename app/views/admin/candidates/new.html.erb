<h2 class="text-2xl font-semibold text-green-700 mb-6">Add New Candidate</h2>

<%= form_with model: @candidate, url: admin_candidates_path, local: true, multipart: true, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :position_id, "Position", class: "block text-gray-700" %>
    <%= form.collection_select :position_id, Position.all, :id, :name, { selected: @position&.id }, class: "w-full p-2 border rounded" %>
    <% @candidate.errors.full_messages_for(:position_id).each do |message| %>
      <p class="text-red-500 text-sm"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :name, class: "block text-gray-700" %>
    <%= form.text_field :name, class: "w-full p-2 border rounded" %>
    <% @candidate.errors.full_messages_for(:name).each do |message| %>
      <p class="text-red-500 text-sm"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :qualification, class: "block text-gray-700" %>
    <%= form.text_field :qualification, class: "w-full p-2 border rounded" %>
  </div>

  <div>
    <%= form.label :photo, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.file_field :photo, accept: "image/png,image/jpeg", class: "w-full p-2 border rounded" %>
  </div>

  <div>
    <%= form.submit "Create Candidate", class: "px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600" %>
  </div>
<% end %>

<%= link_to "Back to Candidates", admin_candidates_path, class: "text-blue-500 hover:underline" %>