<h2 class="text-2xl font-semibold text-green-700 mb-6">Add New User</h2>

<%= form_with model: @user, url: admin_users_path, local: true, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :name, class: "block text-gray-700" %>
    <%= form.text_field :name, class: "w-full p-2 border rounded" %>
    <% @user.errors.full_messages_for(:name).each do |message| %>
      <p class="text-red-500 text-sm"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :email, class: "block text-gray-700" %>
    <%= form.email_field :email, class: "w-full p-2 border rounded" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <p class="text-red-500 text-sm"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :role, class: "block text-gray-700" %>
    <%= form.select :role, [["Member", "member"], ["Admin", "admin"]], {}, class: "w-full p-2 border rounded" %>
  </div>

  <div>
    <%= form.submit "Create User", class: "px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600" %>
  </div>
<% end %>